{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "KrampUI",
    "version": "0.0.8"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": ["**"]
      },
      "shell": {
        "open": ".*",
        "scope": [{ "name": "cmd", "cmd": "cmd", "args": true }]
      }
    },
    "windows": [
      {
        "title": "KrampUI",
        "minWidth": 400,
        "minHeight": 200,
        "width": 650,
        "height": 375,
        "resizable": true,
        "maximizable": true,
        "alwaysOnTop": true,
        "center": true,
        "visible": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        { "domain": "loader.live", "windows": ["login"], "enableTauriAPI": true }
      ]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "KrampUI",
      "publisher": "Snipcola",
      "icon": ["./icons/icon.ico"]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
