{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "KrampUI",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "scope": ["**"]
      },
      "shell": {
        "scope": [{ "name": "kr-inject", "cmd": "$APPCONFIG/kr-executable.exe" }]
      }
    },
    "windows": [
      {
        "title": "KrampUI",
        "minWidth": 500,
        "minHeight": 200,
        "width": 725,
        "height": 425,
        "resizable": true,
        "maximizable": true,
        "alwaysOnTop": true,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "KrampUI",
      "publisher": "Snipcola",
      "icon": ["./icons/icon.ico"]
    }
  }
}
